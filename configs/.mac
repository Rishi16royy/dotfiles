function cask-update() {

(set -x; brew update;)

(set -x; brew cleanup;)
(set -x; brew cask cleanup;)

red=`tput setaf 1`
green=`tput setaf 2`
reset=`tput sgr0`

#casks=( $(brew cask list) )
casks=( $(brew cask outdated --greedy | grep -v '(latest)') )
for cask in ${casks[@]}
do
    echo upgrading $cask
    brew cask upgrade --verbose $cask
done
}



